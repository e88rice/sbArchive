<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.sbarchive.mapper.signboard.SignBoardMapper">

    <insert id="add" parameterType="com.project.sbarchive.vo.signboard.SignBoardVO" useGeneratedKeys="true" keyProperty="signboardId">
        INSERT INTO signboard (userId, xOffSet, yOffSet, title, address, content, addDate, modDate)
        VALUES ('admin', #{xOffSet}, #{yOffSet}, #{title}, #{address}, 'content', now(), now())
    </insert>

    <select id="getList" resultType="com.project.sbarchive.vo.signboard.SignBoardVO">
        select * from signboard;
    </select>

</mapper>